{
    "compilerOptions": {
      "module": "commonjs",
      "lib": ["ES2015"],
      "composite": true,
      "declaration": true,
      "noImplicitAny": false,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "es6",
      "sourceMap": false,
      "outDir": "./dist",
      "rootDir": "./lib",
      "skipLibCheck": true
    },
    "include": ["lib/**/*.ts"],
    "exclude": ["README.md", "node_modules", "test", "**/*spec.ts"]
  }
  