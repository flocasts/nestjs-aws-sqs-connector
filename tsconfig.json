{
    "compilerOptions": {
      "module": "commonjs",
      "lib": ["ESNext"],
      "composite": true,
      "declaration": true,
      "noImplicitAny": false,
      "removeComments": true,
      "noLib": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "es6",
      "sourceMap": false,
      "outDir": "./dist",
      "rootDir": "./lib",
      "skipLibCheck": true,
      "baseUrl": "./"
    },
    "include": ["lib/**/*.ts"],
    "exclude": ["node_modules", "dist", "test", "**/*spec.ts"]
  }
  